{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "importHelpers": true,
        "module": "ES2020",
        "sourceMap": true,
        "types": [],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist/lib",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "src"
    ]
}